<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.blogDetailActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0FDF4"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pr_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nội dung bài viết"
            android:textColor="#0BAE77"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_menu_24"
            android:layout_marginStart="24dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/blogCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/toolbar"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/blogImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="12dp"
                android:contentDescription="blog Image"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image_background" />

            <TextView
                android:id="@+id/blogName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Title bài viết"
                android:textColor="#333333"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/blogDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="4dp"
                android:text="Nội dung review"
                android:textColor="#6D6D6D"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/blogPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date Time"
                    android:textColor="#305F72"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/blogCalories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="200 kcal"
                    android:textColor="#305F72"
                    android:textSize="16sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/foodQualityRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chất lượng món ăn: 5"
                android:textSize="16sp"
                android:textColor="#444"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/environmentRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Không gian: 4"
                android:textSize="16sp"
                android:textColor="#444"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/serviceRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phục vụ: 5"
                android:textSize="16sp"
                android:textColor="#444"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/pricingRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá cả: 3"
                android:textSize="16sp"
                android:textColor="#444"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/hygieneRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vệ sinh: 4"
                android:textSize="16sp"
                android:textColor="#444"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blogCard"
        android:layout_marginTop="20dp"
        android:backgroundTint="#22C55E"
        android:text="Thêm vào bookmark"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cartSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/badge_background"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="154dp"
        android:layout_marginBottom="35dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="#22C55E"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>
