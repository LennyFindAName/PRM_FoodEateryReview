@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/login.css" type="text/css" />
    <link rel="stylesheet" href="~/css/reset-password.css" />
</head>
<body>
    <div class="container">
        <h1>Reset Password</h1>
        <form id="resetPasswordForm">
            <input type="hidden" name="email" />
            <input type="hidden" name="code" />
            <input type="password" name="newPassword" placeholder="Enter new password" required />
            <input type="password" name="confirmPassword" placeholder="Confirm new password" required />
            <button type="submit">Reset Password</button>
            <div id="resetMessage"></div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            const urlParams = new URLSearchParams(window.location.search);
            const email = urlParams.get('email');
            const code = urlParams.get('code');

            if (!email || !code) {
                $("#resetMessage").text("Invalid link. Please check your email.").css("color", "red");
                return;
            }

            $("input[name='email']").val(email);
            $("input[name='code']").val(code);
        });

        $("#resetPasswordForm").on("submit", function (e) {
            e.preventDefault();
            const email = $("input[name='email']").val();
            const code = $("input[name='code']").val();
            const newPassword = $("input[name='newPassword']").val();
            const confirmPassword = $("input[name='confirmPassword']").val();

            if (newPassword !== confirmPassword) {
                Swal.fire({
                    title: 'Error!',
                    text: "Passwords do not match.",
                    icon: 'error',
                    confirmButtonText: 'Try Again'
                });
                return;
            }

            const data = {
                Email: email,
                Code: code,
                NewPassword: newPassword,
                ConfirmPassword: confirmPassword
            };

            $.ajax({
                url: "http://localhost:5029/api/authen/reset-password",  // API reset password
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify(data),
                success: function () {
                    Swal.fire({
                        title: 'Success!',
                        text: 'Password reset successfully!',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        window.location.href = "/authen";
                    });
                },
                error: function (xhr) {
                    const msg = xhr.responseText || "Failed to reset password.";
                    Swal.fire({
                        title: 'Error!',
                        text: msg,
                        icon: 'error',
                        confirmButtonText: 'Try Again'
                    });
                }
            });
        });
    </script>
</body>
</html>
